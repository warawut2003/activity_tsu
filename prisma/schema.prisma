generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma" ลบออก
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Student {
  std_id String @id @default(uuid())
  name String
  activities StudentActivity[]
}

model StudentActivity {
  std_act_id String @id @default(uuid())
  title String
  detail String?
  date DateTime
  studentId String
  student Student @relation(fields: [studentId], references: [std_id])
  photos StudentActivityPhoto[]
}

model StudentActivityPhoto {
  id String @id @default(uuid())
  filename String
  url String
  createdAt DateTime @default(now())
  activityId String
  activity StudentActivity @relation(fields: [activityId], references: [std_act_id])
}